<div class="navbar navbar-expand-sm navbar-light navbar-lewagon border-bottom border-light">
  <%= link_to 'Timber', root_path, :class => 'navbar-brand' %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if current_user %>
        <li class="nav-item btn timber-btn"><%= link_to('My Account', user_path(current_user)) %></li>
        <li class="nav-item btn timber-btn"><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
      <% else %>
        <li class="nav-item dropdown btn timber-btn"><%= link_to('Sign in', new_user_session_path) %></li>
        <li class="nav-item dropdown btn timber-btn"><%= link_to('Sign up', new_user_registration_path) %></li>
      <% end %>
    </ul>
  </div>
</div>