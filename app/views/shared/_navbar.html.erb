<div class="navbar d-flex navbar-expand-sm navbar-light navbar-lewagon border-bottom border-light">
  <div class="navbar-header">
    <%= image_tag "old-logo.png", alt: "alttext", width: 30, height: 40 %>
    <%= link_to 'Timber', root_path, :class => 'navbar-brand' %>
    </div>

      <div class="navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if current_user %>
            <li class="nav-item btn timber-btn"><%= link_to 'My Account', user_path(current_user)%></li>
            <li class="nav-item btn timber-btn"><%= link_to "Sign out", destroy_user_session_path, :method => :delete  %></li>
            <%= cl_image_tag(current_user.photo.key, class: "avatar-bordered") %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% else %>
            <li class="nav-item dropdown btn timber-btn"><%= link_to 'Sign in', new_user_session_path %></li>
            <li class="nav-item dropdown btn timber-btn"><%= link_to 'Sign up', new_user_registration_path %></li>
          <% end %>
            </div>
        </ul>
    </div>
</div>

