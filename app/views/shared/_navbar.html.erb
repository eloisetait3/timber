<div class="w-100 py-3">
  <div class=" container d-flex justify-content-between align-items-center">
    <div class="">
      <%= link_to root_path, :class => 'navbar-brand' do %>
        <%= image_tag "old-logo.png", alt: "alttext", width: 30, height: 40 %>
      <% end %>
    </div>

    <div>
      <% if user_signed_in? %>
        <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: 'btn btn-link'  %>
        <%= link_to 'My Account', user_path(current_user), class: 'btn btn-secondary'%>
        <% if current_user.photo.attached? %>
          <%= cl_image_tag(current_user.photo.key, class: "avatar-bordered") %>
        <% end %>
      <% else %>
        <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-link' %>
        <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-secondary' %>
      <% end %>
    </div>

  </div>
</div>


