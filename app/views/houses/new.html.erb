<div class="container">
  <div class="col-6 d-flex flex-column align-items-center">
    <div class="card p-3">
        <h2>Add your treehouse</h2>
        <%= simple_form_for [ @user, @house ] do |f| %>
          <%= f.input :name %>
          <%= f.input :location %>
          <%= f.input :description %>
          <%= f.input :price %>

          <!-- need to add a link_to show_house_path -->
          <%= f.submit "Add your treehouse!", class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>
