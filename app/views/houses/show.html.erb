<div class=“timber-container”>
  <div class= "details">
    <% if @house.photos.attached? %>
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active carousel-image">
              <%= cl_image_tag @house.photos[0].key, class: "d-block w-100", crop: :fill %>
          </div>
          <div class="carousel-item carousel-image">
              <%= cl_image_tag @house.photos[1].key, class: "d-block w-100", crop: :fill %>
          </div>
          <div class="carousel-item carousel-image">
              <%= cl_image_tag @house.photos[2].key, class: "d-block w-100", crop: :fill %>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    <% else %>
      NO PHOTO
    <% end %>
    <h1><strong><%= @house.name %></strong></h1>
    <p>price: <strong>£<%= @house.price %></strong></p>
    <p>Location: <%= @house.location %></p>
    <p>Description: <%= @house.description %></p>
  </div>


<div id = "reviews-section">
  <div class = "card border-success mb-3">
    <h3>How was your stay at <%= @house.name %>?</h3>
    <div class = "review-form">
      <%= simple_form_for([@house, @review]) do |f| %>
      <%= f.input :content, as: :text %>
      <%= f.input :rating %>
      <%= f.button :submit %>
      <% end %>
    </div>
  </div>
  <div id = "reviews">
    <% if @house.reviews.blank? %>
      <h3>There are currently no reviews for <%= @house.name %></h3>

    <% else %>
      <h3><%= pluralize @house.reviews.size, "review" %></h3>
    <% end %>
  </div>
  <div class = "border-top">
      <%= @house.reviews.each do |review| %>
        <div class="card border-success mb-3" style="max-width: 18rem;">
        <div class ="header justify-content-between">
          <%= @review.user%>
          <%= @review.rating %>
        </div>
        <%= @review.content %>
    </div>
    <%end %>
  </div>
</div>

</div>

 
