<div class ="container">
  <div class ="house-form">
    <h1>Input house details</h1>
    <%= simple_form_for @house do |f| %>
      <%= f.input :name %>
      <%= f.input :location %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :photo %>
      <%= f.button :submit, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
