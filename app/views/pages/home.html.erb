<div class = "timber-container">
  <div class = "banner">
    <h1 class = "text-center">Stay somewhere extraordinary....</h1>
  </div>
  <div class="row justify-content-center">
    <%= render "shared/filter_form", path: root_path %>
  </div>
  <div class= "card-deck" id ="houses-display">
    <% @houses_sample.each do |house| %>
      <div class="card">
        <h3 class= "card-title text-center"><%= link_to house.name, house_path(house) %></h3>
        <div class ="card-body">
          <img class= "card-img-top" src= "http://res.cloudinary.com/dynjb5ftd/image/upload/v1589976577/treehouses/treehouse_5_fyugpx.jpg" alt = "treehouse")>
          <p class="card-text"><%= house.price %></p>
          <p class="card-text"><%= house.description %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class= "btn timber-btn btn-lg"><%= link_to "Browse all treehouses", houses_path %></div>
</div>

