<div class="container">
  <div class="row align-items-center full-height">
    <div class="col-4">
      <%= image_tag 'illustration.svg', class: 'w-100' %>
    </div>
    <div class="col-8 px-5">
      <h2>Why not stay in a tree house on your next adventure?</h2>
      <p class="text-muted big-text">Where are you heading?</p>
      <%#= render "shared/filter_form", path: houses_path %>
      <%= simple_form_for :search, url: houses_path, method: :get do |f|%>
        <div class="d-flex align-items-center">
          <input class="form-control string required" placeholder="eg: New Forest, UK" type="text" name="search[location]" id="search_location">
          <%# f.input :price, as: :radio_buttons, collection: ["cheap", "medium", "expensive"] %> <%# We will return on this filter tomorrow %>
          <%= f.submit "Filter", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
