
<div class="container d-flex justify-content-center">
  <div class="col-6 d-flex flex-column align-content-center">
    <div class="card p-3 mt-5">
      <%= link_to house_path(@house) do %>
        <div class="d-flex justify-content-end">
          <button type=“button” class=“close” aria-label=“Close”>
            <span aria-hidden=“true”>&times;</span>
          </button>
        </div>
      <% end %>
      <h1>Book this treehouse</h1>
      <%= simple_form_for [ @house, @booking ] do |f| %>
        <%= f.input :checkin, html5: true, label: 'Check-in', input_html: { id: "range_start" } %>
        <%= f.input :checkout, html5: true, label: 'Check-out', input_html: { id: "range_end" } %>
        <%= f.input :guests, label: 'How many guests will be staying?' %>
        <%= f.submit "Book this treehouse!", class: "btn btn-lg btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

